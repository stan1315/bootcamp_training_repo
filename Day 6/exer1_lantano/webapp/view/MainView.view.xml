            </items>
          </Select>

          <Label id="idLblPhone" text="{i18n>numberLbl}" visible="false"/>
          <Input id="idInputPhone" value="" visible="false"/>
          <Label id="idLblCC" text="{i18n>ccDetailsLbl}" visible="false"/>
          <Input id="idInputCC" value="" visible="false"/>
        </f:content>
      </f:SimpleForm>
